}

@section jsFooter
{
    <script src="~/asset/admin/js/controller/baihatcontroller.js"></script>
}
@section header
{
    Danh sách bài hát
}
<div class="col-lg-12">
    
        
        <!-- /.panel-heading -->
        <div class="panel-body">
