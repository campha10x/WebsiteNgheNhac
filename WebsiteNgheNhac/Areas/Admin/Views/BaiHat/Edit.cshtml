@model Model.EF.tbl_BaiHat

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header
{
    Sửa Bài hát
}
@section jsFooter
{
    <script>
             $('#btnSelectImage').on('click', function (e)
            {
                e.preventDefault();
                var finder=new CKFinder();
                finder.selectActionFunction = function (url)
                {
                    $('#txtImage').val(url);
                }
                finder.popup();
            })

    </script>
}


@using (Html.BeginForm("Edit", "BaiHat", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-offset-1">
                    <div style="margin-left:30px;">
                        <button type="submit" class="btn btn-primary btn-circle ">
                            <i class="fa fa-save"></i>
                        </button>
                        <span>Lưu lại</span>
                        <img src="~/asset/admin/images/split.png" />
                        <a href="../Index" class="btn btn-success btn-circle"><i class="fa fa-mail-reply"></i></a>
                        <span>Trở lại</span>
                        <img src="~/asset/admin/images/split.png" />
                    </div>
                    @*<a href="../Index" class="btn btn-primary ">Trở về</a>
