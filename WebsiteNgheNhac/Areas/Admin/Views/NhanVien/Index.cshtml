}

<br />
<div class="row">
    <div class="col-md-12">
        <div class="col-md-11">
            <div class="col-md-4">
                <input type="text" class="form-control" id="txtNameS" placeholder="Type name" />
            </div>
            <div class="col-md-4">
                <select class="form-control" id="ddlStatusS">
                    <option value="">All</option>
                    <option value="true">Active</option>
                    <option value="false">Locked</option>
                </select>
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary" id="btnSearch">Search</button>
                <button class="btn btn-default" id="btnReset">Reset</button>
            </div>
        </div>
        <div class="col-md-1">
            <button id="btnAddNew" class="btn btn-success pull-right">Add employee</button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên nhân viên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Lương</th>
                    <th>Chức vụ</th>
                    <th>Id_Quyền</th>
                    <th>Tên tài khoản</th>
                    <th>Trạng thái</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody id="tblData"></tbody>
        </table>
        <div id="pagination" class="pagination">
        </div>
    </div>

</div>
<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Id}}</td>
        <td>{{tenNV}}</td>
        <td>{{NgaySinh}}</td>
        <td>{{gioitinh}}</td>
        <td><input type="number" class="txtLuong" data-id="{{Id}}" value="{{Luong}}" /></td>
        <td>{{ChucVu}}</td>
        <td>{{Id_Quyen}}</td>
        <td>{{UserName}}</td>
        <td>{{{Status}}}</td>
        <td>
            <button class="btn btn-primary btn-edit" data-id="{{Id}}">Edit</button>
            <button class="btn btn-danger btn-delete" data-id="{{Id}}">Delete</button>
        </td>
    </tr>
</script>
@RenderPage("_AddUpdateModal.cshtml")
