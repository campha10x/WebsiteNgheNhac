<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));


        $(document).ready(function () {
           
                
                    $(".overlayLink-signin").click(function (event) {
                        event.preventDefault();
                       
                        var checkdangnhap='@TempData["CheckDangNhap"]';
                        if(checkdangnhap==='')
                        {
                            $(".overlay-signin").fadeToggle("fast");
                        }
                        if (checkdangnhap !== '') {
                            $.ajax({
                                type: "POST",
                                url: '/TrangChu/Logout',
                                dataType: 'json',
                                success: function (res) {
                                    if (res.status == true) {
                                        //checkdangnhap = "Đăng kí";
                                        //'@TempData["CheckDangNhap"]' = checkdangnhap;
                                        //$('.sign-in').html('Đăng kí');
                                        window.location.href = '/TrangChu/Index';
                                    }
                                }
                            })
                        }

                    });

                    $(".close-signin").click(function () {
                        $(".overlay-signin").fadeToggle("fast");
                    });

                    $(document).keyup(function (e) {
                        if (e.keyCode == 27 && $(".overlay-signin").css("display") != "none") {
                            event.preventDefault();
                            $(".overlay-signin").fadeToggle("fast");
                        }
                    });
                
          

           
        });
    </script>
    <div class="header">
        <div class="container header_content">
            <div class="row">
                <div class="col-md-3">
                    <a href="http://www.nhaccuatui.com/">
                        <img src="~/asset/client/images/TieuDeKoDoi/logo_keeng.png" alt="Logo" height="55" />
                    </a>
                </div>
                <div class="col-md-6">
                    <div class="box_search">
                        <form id="formSearchQuick">
                            <input id="txtSearch" type="text" maxlength="45" placeholder="Từ khóa tìm kiếm.." autocomplete="on">
                            <button class="search-keeng-btn">
                                <img src="~/asset/client/images/TieuDeKoDoi/btn_search.png" height="37">
                            </button>
                        </form>
                    </div>
                </div>
                <div class="col-md-3 login_container">
                    <div style="margin-top:15px; height:72px;">
                        @*@RenderPage("Dangki.cshtml", new Model.EF.tbl_NguoiDung())*@
                        @Html.Action("Dangki", "TrangChu");
                        @Html.Partial("~/Views/Shared/Dangnhap.cshtml");
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            @*-----------------------Menu--------------------------*@
            @{Html.RenderAction("Menu", "TrangChu");}
        </div>
    </div>
    <div class="content">
        @RenderBody();
        @RenderPage("Footer.cshtml")
