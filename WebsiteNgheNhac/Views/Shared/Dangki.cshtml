<div class="overlay-signin" style="display:none" ;>
    <div class="login-wrapper">
        <div class="login-content">
            <a class="close close-signin">x</a>
            <h3>Đăng kí</h3>
            <hr />
            <div style="border-right:1px solid #f0f0f0; width:65%; float:left; font-size:13px;">
                @using (Html.BeginForm("Dangki", "TrangChu", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "col-md-3" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.TaiKhoan, htmlAttributes: new { @class = "form-control " })
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "col-md-3" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.MatKhau, htmlAttributes: new { @class = "form-control ", @type = "password" })
                            </div>
                        </div>
                    </div>
                            <div class="form-group">
                                <div class="row">
                                    <label for="replypassword" class="col-md-3">Nhập lại mật khẩu</label>
                                    <div class="col-md-8">
                                        @Html.TextBox("ReplyTaiKhoan", null, htmlAttributes: new { @class = "form-control", @type = "password" });
                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-3" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control " })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-8">
                                        <button type="submit" class="btn btn-primary" style="width:100%;">ĐĂNG KÝ MỚI</button>
                                    </div>
                                </div>
                            </div>
                }
            </div>
            <div style="width:35%; float:left; ">
                <div style="margin-left:30px; margin-top:50px;">
                    <div class="row">
                        <img src="~/asset/client/images/TieuDeKoDoi/1491342558_square-facebook.png" />
                        <a href="#">Đăng nhập qua Facebook</a>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <img src="~/asset/client/images/TieuDeKoDoi/1491342699_square-google-plus.png" />
                        <a href="#">Đăng nhập qua Google+</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

